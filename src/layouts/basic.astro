---
import Footer from "@components/footer.astro";
import Header from "@components/header.astro";
import Metadata from "@components/metadata.astro";
import Sidebar from "@components/sidebar.astro";

interface Props {
    title: string;
    description?: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <Metadata {...Astro.props} />
        <slot name="page-head" />
    </head>
    <body class="flex flex-col min-h-screen">
        <Header title={title} />
        <div class="h-full flex-grow block md:flex md:justify-stretch">
            <main class="container mx-auto p-4 py-2 md:py-6 prose">
                <slot>
                    <p>
                        If you see this text, then the page using this was not
                        constructed correctly.
                    </p>
                    <p>Developer: Make sure you are filling this slot.</p>
                </slot>
            </main>
            <Sidebar />
        </div>
        <Footer />
        <slot name="post-body" />
    </body>
</html>
